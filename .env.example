# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# GCP Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account.json
GCP_BILLING_ACCOUNT_ID=your_billing_account_id

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Anthropic Configuration (for future use)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Cache Configuration
CACHE_TTL=3600  # Cache time-to-live in seconds (default: 1 hour)
CACHE_TYPE=memory  # 'memory' or 'redis'
REDIS_URL=redis://localhost:6379  # Required if CACHE_TYPE=redis

# MCP Server Configuration
MCP_SERVER_PORT=3000
LOG_LEVEL=info  # debug, info, warn, error