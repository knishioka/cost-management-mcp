{
  "name": "cost-management-mcp",
  "version": "1.0.0",
  "description": "MCP server for unified cost management across cloud providers",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "prepare": "husky"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "cost-management",
    "aws",
    "gcp",
    "openai",
    "cloud-cost",
    "finops"
  ],
  "author": "knishioka",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/knishioka/cost-management-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/knishioka/cost-management-mcp/issues"
  },
  "homepage": "https://github.com/knishioka/cost-management-mcp#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "commonjs",
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.39.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.5.3",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@aws-sdk/client-cost-explorer": "^3.922.0",
    "dotenv": "^17.2.3",
    "node-cache": "^5.1.2",
    "openai": "^6.8.0",
    "zod": "^4.1.12"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ],
    "*.{js,ts,json,md}": [
      "prettier --write"
    ]
  }
}
